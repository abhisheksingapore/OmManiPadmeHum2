<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_om_mani_padme_hum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tatsme.ommanipadmehum.OmManiPadmeHum">

    <ImageView
        android:id="@+id/buddha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/celestialbuddhawatrong" />

    <Button
        android:id="@+id/PlayPauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="playPauseMusic"
        android:text="Pause" />

    <Button
        android:id="@+id/StopPlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="stopMusic"
        android:text="Stop" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="loopMusic"
        android:text="ToggleButton"
        android:textOff="Loop Off"
        android:textOn="Loop On" />

</RelativeLayout>
